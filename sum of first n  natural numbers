import java.util.*;
public class sum_natural_numbers_input{
    public static void main(String[]args)
    { Scanner sc=new Scanner(System.in);
    System.out.println("enter the number:");
    int n=sc.nextInt();
    
        int sum=0,i=0;
        while(i <= n)
        {
            sum += i;
            i++;}
        System.out.println(sum);


    }
}
